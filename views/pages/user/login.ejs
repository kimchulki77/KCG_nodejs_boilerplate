<% include ../../header.ejs %>
<div class="panel">
    <div class="panel-body">
        <form id="formLogin"
              action="/login"
              method="post">
            <div>
                <label for="user_id">
                    아이디
                </label>
                <input id="user_id"
                       class="input-sm"
                       name="user_id"
                       type="text">
            </div>
            <div>
                <label for="user_pw">
                    비밀번호
                </label>
                <input id="user_pw"
                       class="input-sm"
                       name="user_pw"
                       type="password">
            </div>
            <input class="btn btn-sm btn-default btn-block"
                   type="submit"
                   value="로그인">
        </form>
        <a class="btn btn-sm btn-danger btn-block"
           href="/join">회원가입</a>
    </div>
</div>


