<% include ../../header.ejs %>
<div class="panel"
     style="display: inline-block">
    <div class="panel-body"
         style="width:100%; text-align: center;">
        <div>
            회원가입
        </div>
        <form action="/joinEnd"
              method="post">
            <dl>
                <dt>
                    <label for="user_id">
                        아이디
                    </label>
                </dt>
                <dd>
                    <input class="input input-sm"
                           type="text"
                           name="user_id">
                </dd>
                <dt>
                    <label for="user_pw">
                        비밀번호
                    </label>
                </dt>
                <dd>

                    <input class="input input-sm"
                           type="password"
                           name="user_pw">
                </dd>
                <dt>
                    <label for="user_pw_chk">
                        비밀번호 확인
                    </label>
                </dt>
                <dd>

                    <input class="input input-sm"
                           type="password"
                           name="user_pw_chk">
                </dd>
                <dt>
                    <label for="email">
                        이메일
                    </label>
                </dt>
                <dd>
                    <input class="input input-sm"
                           type="email"
                           name="email">
                </dd>
                <dt>
                    <label for="nickname">
                        닉네임
                    </label>
                </dt>
                <dd>

                    <input class="input input-sm"
                           type="text"
                           name="nickname">
                </dd>
            </dl>
            <input class="input input-sm"
                   class="btn btn-primary"
                   type="submit"
                   value="회원가입">
        </form>
    </div>
</div>
<% include ../../footer.ejs %>
