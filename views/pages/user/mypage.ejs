<% include ../../header.ejs %>
<div class="panel">
    <div class="panel-body">
        <form id="formLogin"
              action="/login"
              method="post">
            <div>
                <%= user.user_id %>
                <label for="user_id">
                    아이디
                </label>
                <input id="user_id"
                       class="input-sm"
                       name="user_id"
                       value="<%= user.user_id %>"
                       type="text">
            </div>
            <div>
                <label for="user_pw">
                    비밀번호
                </label>
                <input id="user_pw"
                       class="input-sm"
                       name="user_pw"
                       type="password">
            </div>
        </form>
    </div>
</div>


